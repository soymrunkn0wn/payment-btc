{
  "name": "bitcoin-payment-landing-page",
  "version": "1.0.0",
  "description": "A basic landing page that integrates with the Zaprite API to accept Bitcoin, Lightning Network, and card payments",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "serve": "npx http-server -p 8000 -c-1",
    "dev": "npx live-server --port=8000 --no-browser",
    "build": "echo 'No build process required for static files'",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linting configured'",
    "format": "npx prettier --write *.html *.css *.js *.md",
    "validate": "npx html-validate index.html"
  },
  "keywords": [
    "bitcoin",
    "lightning-network",
    "payments",
    "zaprite",
    "cryptocurrency",
    "landing-page",
    "payment-gateway",
    "web3"
  ],
  "author": "Bitcoin Payment Demo",
  "license": "MIT",
  "homepage": "https://github.com/your-username/bitcoin-payment-landing-page",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bitcoin-payment-landing-page.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bitcoin-payment-landing-page/issues"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "html-validate": "^8.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
